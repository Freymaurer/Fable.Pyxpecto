{    
  "compilerOptions": { 
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "outDir": "build",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,    
  },   
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  }, 
} 